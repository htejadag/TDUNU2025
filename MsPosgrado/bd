
CREATE TABLE asesor (
  id_asesor INT NOT NULL AUTO_INCREMENT,
  dni_asesor VARCHAR(255),
  nombre_asesor VARCHAR(255),
  grado_asesor VARCHAR(255),
  cv_url_asesor VARCHAR(255),
  declaracion_jurada_asesor VARCHAR(255),
  fecha_resolucion_designacion DATE,
  usuario_creacion_asesor VARCHAR(255),
  fecha_creacion_asesor DATE,
  estado_asesor INT DEFAULT 1,
  PRIMARY KEY (id_asesor),
  UNIQUE (dni_asesor)
);



CREATE TABLE estudiante_proceso (
  id_estudiante_proceso BIGINT NOT NULL AUTO_INCREMENT,
  id_estudiante BIGINT NOT NULL,
  id_programa BIGINT,
  estadoGeneral VARCHAR(255) NOT NULL,
  estado_proyecto VARCHAR(255),
  estado_informe_final VARCHAR(255),
  porcentaje_antiplagio DOUBLE,
  listo_para_expedito TINYINT(1) DEFAULT 0,
  fecha_inicio DATE,
  fecha_cierre_academico DATE,
  PRIMARY KEY (id_estudiante_proceso)
);
