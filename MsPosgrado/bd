-- =====================================================
--   TABLE: asesor
-- =====================================================

DROP TABLE IF EXISTS asesor;
CREATE TABLE asesor (
  id_asesor int NOT NULL AUTO_INCREMENT,
  dni_asesor varchar(255) DEFAULT NULL,
  nombre_asesor varchar(255) DEFAULT NULL,
  grado_asesor varchar(255) DEFAULT NULL,
  cv_url_asesor varchar(255) DEFAULT NULL,
  declaracion_jurada_asesor varchar(255) DEFAULT NULL,
  fecha_resolucion_designacion date DEFAULT NULL,
  usuario_creacion_asesor varchar(255) DEFAULT NULL,
  fecha_creacion_asesor date DEFAULT NULL,
  estado_asesor int DEFAULT '1',
  PRIMARY KEY (id_asesor),
  UNIQUE KEY uc_dni_asesor (dni_asesor)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;

-- =====================================================
--   TABLE: estudiante_proceso
--   (Seg√∫n tu modelo EstudianteProceso.java)
-- =====================================================

DROP TABLE IF EXISTS estudiante_proceso;
CREATE TABLE estudiante_proceso (
  id_estudiante_proceso bigint NOT NULL AUTO_INCREMENT,
  id_estudiante bigint NOT NULL,
  id_programa bigint DEFAULT NULL,
  estadoGeneral varchar(255) NOT NULL,
  estado_proyecto varchar(255) DEFAULT NULL,
  estado_informe_final varchar(255) DEFAULT NULL,
  porcentaje_antiplagio double DEFAULT NULL,
  listo_para_expedito tinyint(1) DEFAULT 0,
  fecha_inicio date DEFAULT NULL,
  fecha_cierre_academico date DEFAULT NULL,
  PRIMARY KEY (id_estudiante_proceso)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;

